<% spectacle = Spectacle.find_by(id: params["id"]) %>

<div class="row">
  <div class="col-sm-12">
    <h3>Tweak the spectacle</h3>
  </div>
</div>

<div class="row">
  <form action="/spectacles/<%= spectacle.id %>/update" class="col-sm-6">

    <p class="form-group">Brand: <input value="<%= book.title %>" autofocus class="form-control" name="brand"></p>

    <p class="form-group">Price: <input value="<%= book.price.to_f / 100.0 %>" class="form-control" name="price"></p>

    <p class="form-group">Brand:
    <select name="brand_id">
        
        <% for designer in Designer.all %>
          <option value="<%= designer.id %>" 
            <% if designer.id == spectacle.brand_id %>
              selected
            <% end %>
          >
            <%= designer.name %>
          </option>
        <% end %>
        
    </p>

    <p class="form-group">Link to Photo: <input value="<%= spectacle.photo_url %>" class="form-control" name="photo_url"></p>

    <p class="form-group">Summary:
      <textarea rows="5" class="form-control" name="summary"><%= spectacle.summary %></textarea>
    </p>

    <button class="btn btn-primary">Update</button>
    or
    <a href="/">Cancel</a>

  </form>
</div>
